{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2015", "ES2016", "ES2017", "ESNext", "DOM"],
    "declaration": true,
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "esm", "lib"]
}
